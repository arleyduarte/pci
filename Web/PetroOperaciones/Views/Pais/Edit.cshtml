@{
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}

@model PetroOperaciones.Models.Pais

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

<script src="@Url.Content("~/Scripts/jquery/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Pais</legend>

        @Html.HiddenFor(model => model.PaisID)

        <div class="editor-label">
            @Html.LabelFor(model => model.PaisNm)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PaisNm)
            @Html.ValidationMessageFor(model => model.PaisNm)
        </div>

        <p>
           <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}
