@{
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}

@model PetroOperaciones.Models.ChequeoDO

@{
    ViewBag.Title = "Create";
}

<div class="CreacionNuevo">
<h2>Lista de Chequeo Documento de Operaciones No @ViewBag.NumeroDO,  Cliente:  @ViewBag.ClienteNm</h2>
<p>&nbsp</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formId" }))
{
     @Html.ValidationSummary(true)
      @Html.HiddenFor(model => model.DocumentoOperacionesID)
       @Html.HiddenFor(model => model.ChequeoDOID)
    <fieldset>
	<table class="gt_tbl_check"  >
    		<tr>
                <td class="tbl_info">Cotización</td>
				<td class="tbl_name">@Html.EditorFor(model => model.Cotizacion)</td>
				
			</tr>

    		<tr>
				<td class="tbl_name">Invoice (factura proveedor)</td>
				<td class="tbl_info">@Html.EditorFor(model => model.Invoice)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Lista de Empaque</td>
				<td class="tbl_info">@Html.EditorFor(model => model.ListaEmpaque)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Certificado de Origen</td>
				<td class="tbl_info">@Html.EditorFor(model => model.CertificadoOrigen)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Certificado de Vistos</td>
				<td class="tbl_info">@Html.EditorFor(model => model.CertificadoVistos)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Licencias</td>
				<td class="tbl_info">@Html.EditorFor(model => model.Licencias)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Poliza de Cumplimiento</td>
				<td class="tbl_info">@Html.EditorFor(model => model.PolizaCumplimiento)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Seguro de Mercancia</td>
				<td class="tbl_info">@Html.EditorFor(model => model.SeguroMercancia)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Instructivo de Documento</td>
				<td class="tbl_info">@Html.EditorFor(model => model.InstructivoDocumento)</td>
			</tr>

    		<tr>
				<td class="tbl_name">BL</td>
				<td class="tbl_info">@Html.EditorFor(model => model.BL)</td>
			</tr>

    		<tr>
				<td class="tbl_name">HBL</td>
				<td class="tbl_info">@Html.EditorFor(model => model.HBL)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Documentos Radicados ante el Muisca para menejo de BL Hijo</td>
				<td class="tbl_info">@Html.EditorFor(model => model.DocumentosRadicadosMuisca)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Factura de Agente en el Exterior</td>
				<td class="tbl_info">@Html.EditorFor(model => model.FacturaAgenteExterior)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Factura de Manejo</td>
				<td class="tbl_info">@Html.EditorFor(model => model.FacturaManejo)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Solicitud de Anticipo</td>
				<td class="tbl_info">@Html.EditorFor(model => model.SolicitudAnticipo)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Certificación de Fletes</td>
				<td class="tbl_info">@Html.EditorFor(model => model.CertificacionFletes)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Remisión de Documento al agente de Aduana o Cliente</td>
				<td class="tbl_info">@Html.EditorFor(model => model.RemisionDocumentoAduana)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Orden de Servicio de Transporte</td>
				<td class="tbl_info">@Html.EditorFor(model => model.OrdenServicioTransporte)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Registro Fotografico en Origen (si aplica)</td>
				<td class="tbl_info">@Html.EditorFor(model => model.RegistroFotograficoOrigen)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Registro Fotografico en Destino (si aplica)</td>
				<td class="tbl_info">@Html.EditorFor(model => model.RegistroFotograficoDestino)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Formato LLenano de Contenedor y/o Cargue de Mercancias (si aplica)</td>
				<td class="tbl_info">@Html.EditorFor(model => model.FormatoLLenanoContenedor)</td>
			</tr>

    		<tr>
				<td class="tbl_name">Registro Fotografico en el momento de entreaga  puerto y/o Aeropuerto</td>
				<td class="tbl_info">@Html.EditorFor(model => model.RegistroFotograficoEntregado)</td>
			</tr>




    </table>

    <p>Observaciones</p>
        <table>
            <tr>
				<td class="tbl_name">@Html.TextAreaFor(model => model.Observaciones)
                         @Html.ValidationMessageFor(model => model.Observaciones)
                         </td>
				<td class="tbl_info">  </td>
             </tr>
          </table>

    </fieldset>
}


        <div id="gt_box_contbuttons">
            <a class="ui-button ui-button-aceptar ui-float-left" href="javascript:enviarFormulario();"><span class="ui-button-img"></span><span class="ui-button-txt">Guardar Lista de Chequeo</span></a>
        </div>
</div>

<div id="gt_box_contbuttons">    
   <a class="ui-button ui-button-volver ui-float-left" href="javascript:history.go(-1)"><span class="ui-button-img">&nbsp;</span><span class="ui-button-txt">Regresar</span></a>
</div>


<script type="text/javascript">

    function enviarFormulario() {
        document.getElementById("formId").submit();
    }

</script>